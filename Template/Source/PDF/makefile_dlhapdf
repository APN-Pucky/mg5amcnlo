# ----------------------------------------------------------------------------
#
# Makefile for PDF library
# Apr. 25 2003
#
# ----------------------------------------------------------------------------


gfortran           = gfortran
FFLAGS        = -O -fPIC
LIBRARY	      = ../libpdf.so
LIBDIR        = ../../lib/
PDF           = pdfwrap_lhapdf.o pdf_lhapdf.o pdg2pdf_lhapdf.o opendata.o

.f.o: ; $(gfortran) $(FFLAGS) -c $*.f

all: $(LIBDIR)libpdf.so

$(LIBDIR)libpdf.so: $(PDF)
	gfortran -shared -o libpdf.so $(PDF)
	mv libpdf.so  $(LIBDIR)
