# ----------------------------------------------------------------------------
#
# Makefile for PDF library
# Apr. 25 2003
#
# ----------------------------------------------------------------------------


gfortran           = gfortran
FFLAGS        = -O
LIBRARY       = ../libpdf.a
LIBDIR        = ../../lib/
PDF           = pdfwrap_lhapdf.o pdf_lhapdf.o pdg2pdf_lhapdf.o opendata.o

.f.o: ; $(gfortran) $(FFLAGS) -c $*.f

all: $(LIBDIR)libpdf.a

$(LIBDIR)libpdf.a: $(PDF)
	ar cru libpdf.a $(PDF) 
	ranlib libpdf.a
	mv libpdf.a  $(LIBDIR)
